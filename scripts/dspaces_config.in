#!/bin/bash

DSPACES_INC="-I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@"
DSPACES_LIB="-L@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -ldspaces -ldscommon -ldart  -lpthread -lm  -lrt"
DSPACES_VER="@DataSpaces_VERSION@"
DSPACES_ARG="dataspaces @DataSpaces_VERSION@ 
              CONFIGURED WITH CMAKE"

OPTIND=1

PRINT_CFLAGS=no
PRINT_LDFLAGS=no
PRINT_VERSION=no
PRINT_ARGUMENTS=no

function usage() {
    echo "`basename $0` [-c | -l | -v | -V]
Arguments
    -c Compiler flags
    -l Linker flags
    -v Version flags
    -v Configure options"
}

while getopts "h?clvV" opt; do
    case "$opt" in
    h|\?)
        usage
        exit 0
        ;;
    c)
        PRINT_CFLAGS=yes
        ;;
    l)
        PRINT_LDFLAGS=yes
        ;;
    v)
	PRINT_VERSION=yes
	;;
    V)
        PRINT_ARGUMENTS=yes
        ;;    
    esac
done

if [ "$PRINT_CFLAGS" == "yes" ]; then
    echo $DSPACES_INC
fi

if [ "$PRINT_LDFLAGS" == "yes" ]; then
    echo $DSPACES_LIB
fi

if [ "$PRINT_VERSION" == "yes" ]; then
    echo $DSPACES_VER
fi
if [ "$PRINT_ARGUMENTS" == "yes" ]; then
    echo $DSPACES_ARG
fi
